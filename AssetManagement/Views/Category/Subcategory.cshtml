@{
    ViewData["Title"] = "Subcategory";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category.css" asp-append-version="true" />
}
    
<div class="nav-info">
    <a class="nav-text" asp-action="Dashboard" asp-controller="Home">
        <ion-icon name="home-outline"></ion-icon>
    </a>
    <ion-icon name="chevron-forward-outline"></ion-icon>
    <a class="nav-text" asp-action="Category" asp-controller="Category">
        <span>Categories</span>
    </a>
    <ion-icon name="chevron-forward-outline"></ion-icon>
    <a class="nav-text" asp-action="Subcategory" asp-controller="Category">
        <span>Sub Categories</span>
    </a>
</div>
<h2 class="nav-title">Sub Categories</h2>
<div class="container-fluid" style="padding-left:0px;">
    <div id="grid"></div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add Sub Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addForm">
                    <input type="hidden" id="subCategoryId">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="subCategoryName" class="form-label">Sub Category Name:</label>
                            <input type="text" class="form-control" id="subCategoryName" name="subCategoryName">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label for="subCategoryDescription" class="form-label">Description:</label>
                            <input type="text" class="form-control" id="subCategoryDescription" name="subCategoryDescription">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label for="subCategoryLogo" class="form-label">Logo:</label>
                            <input type="file" class="form-control" id="subCategoryLogo" name="subCategoryLogo">
                        </div>
                    </div>
                    <div class="row mb-3 preview-column d-none">
                        <div class="col">
                            <img id="imagePreview" src="#" alt="Preview" class="showModalImage" style="max-width: 100%; max-height: 200px;">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn all-button" id="saveSubCategoryBtn">Save SubCategory</button>
                <button type="button" class="btn all-button" id="saveChangesBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this category?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn all-button" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var subCategoriesData = @Html.Raw(ViewData["SubCategoriesJson"]);
    </script>
    <script src="~/js/subcategory.js" asp-append-version="true"></script>
}